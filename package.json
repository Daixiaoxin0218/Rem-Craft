{
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "sass": "^1.53.0",
    "standard-version": "^9.5.0"
  },
  "version": "0.3.3",
  "description": "My theme for siyuan",
  "name": "rem-craft",
  "scripts": {
    "build": "sass --watch src/styles/index.scss:./theme.css -s compressed --no-source-map",
    "changelog": "conventional-changelog -p angular -i src/docs/CHANGELOG.md -w",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
